server {
    listen 80;
    listen [::]:80;
    server_name louisemisellinteriors.co.uk www.louisemisellinteriors.co.uk louisemisellinteriors.com www.louisemisellinteriors.com;

    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    location / {
        rewrite ^ https://louisemisellinteriors.co.uk$request_uri? permanent;
    }
}

map $http_accept $img_suffix {
    "~*webp"  ".webp";
    "~*jxr"    ".jxr";
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name louisemisellinteriors.co.uk www.louisemisellinteriors.co.uk;
    charset utf-8;

    ssl on;
    ssl_certificate         /etc/letsencrypt/live/louisemisellinteriors.co.uk/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/louisemisellinteriors.co.uk/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/louisemisellinteriors.co.uk/fullchain.pem;

    expires max;
    etag on;
    add_header Cache-Control "public, max-age=691200";

    client_max_body_size 1G;
    
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Content-Security-Policy "default-src https:; script-src 'self' https://www.googletagmanager.com https://www.google-analytics.com https://code.jquery.com https://assets.pinterest.com 'unsafe-inline' 'unsafe-eval'; style-src https: 'unsafe-inline'; img-src https: data: blob:; connect-src https: wss:; object-src 'self' ; frame-src 'self' ; frame-ancestors 'self' ; form-action 'self' ; upgrade-insecure-requests; block-all-mixed-content; base-uri 'self'; report-uri https://evilben.report-uri.com/r/d/csp/enforce;" always;
    add_header Expect-CT "enforce, max-age=0, report-uri=https://evilben.report-uri.com/r/d/ct/reportOnly" always;
    add_header Feature-Policy "usermedia 'none';" always;

    location /static/ {
        alias /opt/apps/lmisite/src/static/;

        location ~ ^/static(.*)\.(?:png|jpe?g|gif|webp|jxr)$ {
            set $file $1;
            add_header Vary Accept;
            try_files $file$img_suffix $uri =404;
        }
    }
    location /media/ {
        alias /opt/apps/lmisite/src/media/;

        location ~ ^/media(.*)\.(?:png|jpe?g|gif|webp|jxr)$ {
            set $file $1;
            add_header Vary Accept;
            try_files $file$img_suffix $uri =404;
        }
      }
    location ~ ^/favicon.(\w*)$ {
            alias /opt/apps/lmisite/src/static/main_site/favicon/favicon.$1;
      }
    location /robots.txt {
        alias /opt/apps/lmisite/src/static/main_site/robots.txt;
    }
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
        
    location / {
        include uwsgi_params;
        uwsgi_pass unix:///run/uwsgi/lmisite.sock;
    }
}
